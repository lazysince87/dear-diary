# Server
PORT=5000
NODE_ENV=development

# AI Provider (gemini or ollama)
# Use 'ollama' to run local inference via locally-hosted Ollama model (llama3) at http://127.0.0.1:11434
# Use 'gemini' to use the Google cloud API
# AI_PROVIDER=gemini
AI_PROVIDER=ollama

# MongoDB Atlas
MONGODB_URI=

# Google Gemini API
GEMINI_API_KEY=

# ElevenLabs API
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Frontend URL (for CORS)
CLIENT_URL=http://127.0.0.1:3000 #for spotify
# CLIENT_URL=http://localhost:3000

# Supabase — get from https://supabase.com/dashboard → Settings → API
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
# Spotify — get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=